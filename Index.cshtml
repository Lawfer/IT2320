@model FinalProject.Models.HomeViewModel

<html>

    <head>
        <link href="~/Styles/Home.css" rel="stylesheet" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>Final Project</title>
    </head>

    <body>
        <script src="~/Scripts/jquery-2.1.1.min.js"></script>
        <script src="~/Scripts/jquery-ui.min.js"></script>
        <script src="~/Scripts/Home.js"></script>

    <div class="index">

        
        <h1>Welcome to Cuyahoga Community College Student Services Online</h1>
        <p>
           Cuyahoga Community College recognizes students' rights to access personal and
           academic records in accordance with the Family Educational Rights and Privacy Act
           of 1974 (FERPA) as amended by Public Law 93-568.
        </p>

        <div class="container">

            <div class="login">

                <div class="logintext">Already have an account with us? Returning users may log in by entering their site username and password.</div>

                <div class="data">
                    <div class="mobiletext">Log In</div>
                    <div class="label">Username </div>
                    <input id="loginuser" type="text" name="username" />
                    <div id="loginusererror" class="error"></div>
                    <div class="label">Password </div>
                    <input id="loginpass" type="password" name="password" />
                    <div id="loginpasserror" class="error"></div>
                    <div class="loginbutton">Log In</div>
                </div>

                <div class="divider"></div>

                <div class="registertext">New users, please create a new account by providing us with some basic information.</div>

                <div class="data">
                    <div class="mobiletext">Create Account</div>
                    <div class="label">Username </div>
                    <input id="registeruser" type="text" name="username">
                    <div id="registerusererror" class="error"></div>
                    <div class="label">Password </div>
                    <input id="registerpass" type="password" name="password">
                    <div id="registerpasserror" class="error"></div>
                    <div class="label">Email </div>
                    <input id="registeremail" type="text" name="email">
                    <div id="registeremailerror" class="error"></div>
                    <div class="label">Repeat E-mail Address </div>
                    <input id="registeremailrepeat" type="text" name="email repeat">
                    <div id="registeremailrepeaterror" class="error"></div>
                    <div class="registerbutton">Create Account</div>
                </div>

            </div>

            

            <div class="account">

                <div class="information"></div>

                <div class="divider"></div>

                <div class="updateinformation">
                    <div class="data">
                        <div class="label">Element Name </div>
                        <input id="elementname" type="text" name="elementname" />
                        <div id="elementnameerror" class="error"></div>
                        <div class="label">Element Value </div>
                        <input id="elementvalue" type="text" name="elementvalue" />
                        <div class="elementbutton">Add</div>
                    </div>

                </div>

            </div>
        
        </div>

        <footer>Cuyahoga Community College <br /> 700 Carnegie Avenue, Cleveland, Ohio 44115</footer>

    </div>

    </body>

</html>